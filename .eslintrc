{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.3.1"
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base",
    "plugin:react-native/all"
  ],
  "rules" : {
    "arrow-body-style" : 1
  }
}